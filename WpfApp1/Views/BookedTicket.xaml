<Page x:Class="WpfApp1.Views.BookedTicket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookedTicket">

    <ListView ItemsSource="{Binding Tickets}" SelectedItem="{Binding SelectedItem}" SelectionChanged="OnSelectionChanged">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <Image Width="400" Height="200" Source="{Binding Movie.Landscape}" Stretch="UniformToFill" />
                    <TextBlock Text="{Binding Movie.Title}" Foreground="Black" />
                    <TextBlock Text="{Binding Ticket.Schedule}" Foreground="Black" />
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Page>
